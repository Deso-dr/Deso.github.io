---
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle="Projekty Graficzne" description="Moje portfolio projektów graficznych">
  <main class="px-6 py-12 max-w-7xl mx-auto space-y-16">

    <section>
      <h2 class="text-3xl font-bold text-mint-500 mb-6">Wizytówki</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <img src="/images/wizytowka1.jpg" alt="Wizytówka 1" class="rounded-xl shadow-lg" />
        <img src="/graphics/wizytowka2.jpg" alt="Wizytówka 2" class="rounded-xl shadow-lg" />
        <img src="/graphics/wizytowka3.jpg" alt="Wizytówka 3" class="rounded-xl shadow-lg" />
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold text-mint-500 mb-6">Plakaty</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <img src="/graphics/plakat1.jpg" alt="Plakat 1" class="rounded-xl shadow-lg" />
        <img src="/graphics/plakat2.jpg" alt="Plakat 2" class="rounded-xl shadow-lg" />
        <img src="/graphics/plakat3.jpg" alt="Plakat 3" class="rounded-xl shadow-lg" />
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold text-mint-500 mb-6">Menu</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <img src="/graphics/menu1.jpg" alt="Menu 1" class="rounded-xl shadow-lg" />
        <img src="/graphics/menu2.jpg" alt="Menu 2" class="rounded-xl shadow-lg" />
        <img src="/graphics/menu3.jpg" alt="Menu 3" class="rounded-xl shadow-lg" />
      </div>
    </section>

  </main>
</Layout>
